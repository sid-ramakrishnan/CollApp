<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000" >

    <TextView
        android:id="@+id/textViewforappmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Select an Application"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/buttontoaccessexpressmanager"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:paddingLeft="50dp"
            android:src="@drawable/expensemanager"
           android:layout_marginTop="10dp"
             />

        <ImageView
            android:id="@+id/buttontoaccesstimetable"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_marginLeft="22dp"
            android:paddingRight="20dp"
            android:src="@drawable/timetable"
             android:layout_marginTop="10dp"
             />
        
    </LinearLayout>   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textExpenseManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textTimeTable"
            android:layout_alignBottom="@+id/textTimeTable"
            android:layout_alignLeft="@+id/buttontoaccessexpressmanager"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:text="Expense Manager"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textTimeTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="Time Table"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>
        
    <LinearLayout 
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buttontoaccessmemo"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:paddingLeft="50dp"
            android:src="@drawable/memos"
          android:layout_marginTop="10dp"
             />

        <ImageView
            android:id="@+id/buttontoaccessbunkmanager"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:paddingLeft="10dp"
            android:src="@drawable/bunkmanager"
 android:layout_marginTop="10dp"
             />
        
    </LinearLayout>
    
    <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal" 
        >

        <TextView
            android:id="@+id/textMemos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textMemos"
            android:layout_alignBottom="@+id/textMemos"
            android:layout_alignLeft="@+id/textViewforappmenu"
            android:layout_gravity="center"
            android:paddingLeft="35dp"
            android:text="Memos"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textBunkManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:paddingLeft="20dp"
            android:text="Bunk Manager"
            android:textColor="@color/white"
            android:textSize="20dp" />
        
    </LinearLayout>

             <LinearLayout 
       android:layout_width="match_parent"
       android:layout_gravity="center"
       android:layout_height="wrap_content"
       android:orientation="horizontal" 
        >       

        <ImageView
            android:id="@+id/buttontoaccessreminder"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/reminders" 
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        
    </LinearLayout>

  <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal" 
        >      

    <TextView
        android:id="@+id/textReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textTimeTable"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:paddingLeft="50dp"
        android:text="Reminder"
        android:textColor="@color/white"
        android:textSize="20dp" />

</LinearLayout>

</LinearLayout>